{
  "name": "CLEMs_Snips.AI",
  "version": "5.13",
  "slug": "snips",
  "description": "Local voice control platform",
  "url": "https://home-assistant.io/addons/snips/",
  "arch": ["armhf"],
  "startup": "application",
  "boot": "auto",
  "map": ["share"],
  "tmpfs": "size=10m",
  "audio": true,
  "services": ["mqtt:need"],
  "homeassistant_api": true,
  "options": {
    "assistant": "assistant.zip",
    "language": "fr",
    "custom_tts": {
      "active": false,
      "platform": "google"
    },
    "use_voice_serveur": false
  },
  "schema": {
    "assistant": "str",
    "language": "match(en|de|fr)",
    "custom_tts": {
      "active": "bool",
      "platform": "str"
    },
    "use_voice_serveur": "bool"
  }
}
